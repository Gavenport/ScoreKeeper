<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soccerland"
    >

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/team_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/team_title"
            android:text="@string/team_a"
            android:textAlignment="center"
            android:textColor="@color/TeamName"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team_a_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/goal_team_a"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/team_a_corner"
                android:layout_width="146dp"
                android:layout_height="wrap_content"

                android:background="@android:color/holo_green_dark"
                android:padding="4dp"
                android:text="@string/corners_team_a"
                android:textAlignment="center"
                android:textColor="@color/yellowLight"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/team_a_penalty_kick"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:background="@android:color/holo_green_dark"
                android:padding="4dp"
                android:text="@string/penalty_kick_team_a"
                android:textAlignment="center"
                android:textColor="@color/yellowLight"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:background="@color/yellowLight"
            android:onClick="addGoalForTeamA"
            android:text="@string/goal_button"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@color/yellowLight"
        android:onClick="addCornerForTeamA"
        android:text="@string/corner_button" />

    <Button
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@color/yellowLight"
        android:onClick="addPenaltyKickForTeamA"
        android:text="@string/penalty_kick_button"
        android:textAlignment="center" />
</LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/team_title"
            android:text="@string/team_b"
            android:textAlignment="center"
            android:textColor="@color/TeamName"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/goal_team_b"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/team_b_corner"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/corners_team_b"
        android:textAlignment="center"
        android:textColor="@color/yellowLight"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/team_b_penalty_kick"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_green_dark"
        android:padding="4dp"
        android:text="@string/penalty_kick_team_b"
        android:textAlignment="center"
        android:textColor="@color/yellowLight"
        android:textSize="16sp" />
</LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:background="@color/yellowLight"
            android:onClick="addGoalForTeamB"
            android:text="@string/goal_button"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@color/yellowLight"
                android:onClick="addCornerForTeamB"
                android:text="@string/corner_button" />

            <Button
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@color/yellowLight"
                android:onClick="addPenaltyKickForTeamB"
                android:text="@string/penalty_kick_button" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="resetScore"
        android:text="@string/reset"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>
